<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="PlantBase">
        <defName>RG-CB_Dervish</defName>
        <label>dervish</label>
        <description>A beautiful bluish flower growing in colder and wet biomes. Can only be found in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/Dervish</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Beauty>6</Beauty>
            <Nutrition>0.25</Nutrition>
        </statBases>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>5</pathCost>
        <ingestible />
        <plant>
            <fertilityMin>0.05</fertilityMin>
            <fertilitySensitivity>0</fertilitySensitivity>
            <growDays>2.5</growDays>
            <sowTags>
                <li>Ground</li>
            </sowTags>
            <maxMeshCount>16</maxMeshCount>
            <visualSizeRange>0.3~0.5</visualSizeRange>
            <topWindExposure>0.3</topWindExposure>
            <wildClusterRadius>4</wildClusterRadius>
            <wildClusterWeight>3</wildClusterWeight>
            <wildOrder>6</wildOrder>
            <purpose>Beauty</purpose>
        </plant>
    </ThingDef>

    <ThingDef ParentName="TreeBase">
        <defName>RG-CB_Plant_SpruceTreePine</defName>
        <label>spruce pine tree</label>
        <description>A tall conifer with blank spots and died branches. It grows only in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/BogTreePine</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.15, 0.3, 0.15)</volume>
                <offset>(0,0,-0.38)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <Beauty>2</Beauty>
            <Nutrition>0.2</Nutrition>
        </statBases>
        <ingestible />
        <plant>
            <growDays>40</growDays>
            <visualSizeRange>1.3~3.0</visualSizeRange>
            <harvestWork>750</harvestWork>
            <harvestYield>10</harvestYield>
        </plant>
    </ThingDef>

    <ThingDef ParentName="DeciduousTreeBase">
        <defName>RG-CB_Plant_KarimTree</defName>
        <label>karim tree</label>
        <description>A tall leaf tree growing in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/KarimTree</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.24, 0.4, 0.13)</volume>
                <offset>(-0.03,0,-0.44)</offset>
            </shadowData>
            <shaderParameters>
                <_FallColorSource>(0.373, 0.427, 0.313)</_FallColorSource>
                <_FallTransitionRange>(0.02, 0.14)</_FallTransitionRange>
            </shaderParameters>
        </graphicData>
        <statBases>
            <Beauty>1</Beauty>
        </statBases>
        <plant>
            <growDays>35</growDays>
            <leaflessGraphicPath>Things/Plant/Leafless/KarimTree_Leafless</leaflessGraphicPath>
            <harvestWork>2800</harvestWork>
            <harvestYield>50</harvestYield>
            <visualSizeRange>1.7~3.7</visualSizeRange>
        </plant>
    </ThingDef>
	
    <ThingDef ParentName="PlantBase">
        <defName>RG-CB_Volopus</defName>
        <label>volopus</label>
        <description>A small brown mushroom with holes growing in clusters. It grows exclusively in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/Volopus</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Beauty>2</Beauty>
            <Nutrition>0.4</Nutrition>
        </statBases>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>5</pathCost>
        <ingestible />
        <plant>
            <fertilityMin>0.04</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>20</growDays>
            <maxMeshCount>4</maxMeshCount>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestYield>12</harvestYield>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>RawFungus</harvestedThingDef>
            <neverBlightable>true</neverBlightable>
            <visualSizeRange>0.3~0.5</visualSizeRange>
            <topWindExposure>0.1</topWindExposure>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>
	
    <ThingDef ParentName="PlantBase">
        <defName>RG-CB_SwampPod</defName>
        <label>swamp pod</label>
        <description>A small mushroom like plant that looks similar to an eye. It can only be found in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/SwampPod</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Beauty>-2</Beauty>
            <Nutrition>0.8</Nutrition>
        </statBases>
        <selectable>false</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>5</pathCost>
        <ingestible />
        <plant>
            <fertilityMin>0.04</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>20</growDays>
            <maxMeshCount>4</maxMeshCount>
            <dieIfLeafless>true</dieIfLeafless>
            <neverBlightable>true</neverBlightable>
            <visualSizeRange>0.3~0.5</visualSizeRange>
            <topWindExposure>0.0</topWindExposure>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>
	
    <ThingDef ParentName="PlantBase">
        <defName>RG-CB_Plant_ReedGrass</defName>
        <label>reed grass</label>
        <description>Wild reed grass. Slows down anyone moving over it, but looks beautiful in the wind.</description>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>1.3</Flammability>
            <Beauty>2</Beauty>
            <Nutrition>0.25</Nutrition>
        </statBases>
        <pathCost>16</pathCost>
        <graphicData>
            <texPath>Things/Plant/ReedGrass</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <hideAtSnowDepth>0.5</hideAtSnowDepth>
        <ingestible />
        <plant>
            <fertilitySensitivity>0.7</fertilitySensitivity>
            <growDays>5</growDays>
            <harvestWork>85</harvestWork>
            <maxMeshCount>9</maxMeshCount>
            <visualSizeRange>0.7~0.90</visualSizeRange>
            <topWindExposure>0.5</topWindExposure>
            <wildClusterRadius>8</wildClusterRadius>
            <wildClusterWeight>5</wildClusterWeight>
            <wildOrder>1</wildOrder>
        </plant>
    </ThingDef>

</Defs>