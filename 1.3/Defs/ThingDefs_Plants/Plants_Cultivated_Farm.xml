<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="PlantBase">
        <defName>RG-B_Plant_Volopus</defName>
        <label>cultivated volopus</label>
        <description>A small brown mushroom with holes growing in clusters. It grows exclusively in cold bogs.</description>
        <graphicData>
            <texPath>Things/Plant/Volopus</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Beauty>2</Beauty>
            <Nutrition>0.4</Nutrition>
        </statBases>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <pathCost>5</pathCost>
        <ingestible />
        <plant>
            <sowTags>
                <li>Ground</li>
                <li>Hydroponic</li>
            </sowTags>
            <sowResearchPrerequisites>
                <li>RG_MushroomCultivation</li>
            </sowResearchPrerequisites>
            <fertilityMin>0.04</fertilityMin>
            <fertilitySensitivity>0.15</fertilitySensitivity>
            <growDays>18</growDays>
            <maxMeshCount>4</maxMeshCount>
            <sowMinSkill>8</sowMinSkill>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestYield>25</harvestYield>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>RawFungus</harvestedThingDef>
            <neverBlightable>true</neverBlightable>
            <visualSizeRange>0.3~0.5</visualSizeRange>
            <topWindExposure>0.1</topWindExposure>
            <wildOrder>2</wildOrder>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>

</Defs>